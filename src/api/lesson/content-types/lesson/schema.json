{
  "kind": "collectionType",
  "collectionName": "lessons",
  "info": {
    "singularName": "lesson",
    "pluralName": "lessons",
    "displayName": "Lesson",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "Description": {
      "type": "text"
    },
    "duration": {
      "type": "time",
      "required": true
    },
    "check": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "files"
      ]
    },
    "lessonOrder": {
      "type": "integer",
      "required": true,
      "unique": false,
      "default": 0
    },
    "isFreePreview": {
      "type": "boolean"
    },
    "videoUrl": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "videos"
      ]
    },
    "course": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::course.course",
      "inversedBy": "lessons"
    }
  }
}
